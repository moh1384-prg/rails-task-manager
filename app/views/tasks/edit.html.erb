<div class="container mt-4">
  <h1>Update Task</h1>
  <%= form_with model: @task, local: true, class: 'form' do |t| %>
  <div class=" form-group">
    <%= t.label :title, class: 'form-label' %>
    <%= t.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= t.label :details, class: 'form-label' %>
    <%= t.text_field :details, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= t.label :completed, class: 'form-label' %>
    <%= t.check_box :completed, class: 'form-check-input' %>
  </div>
  <%= t.submit 'Update Task', class: 'btn btn-primary mt-2' %>
  <% end %>
</div>